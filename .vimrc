syntax on
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab
set ai
set nu 
set hlsearch
set ruler
set clipboard+=unnamedplus
set wrap linebreak

highlight Comment ctermfg=green
highlight MatchParen ctermbg=242 guibg=DarkGrey

set foldmethod=indent
set foldnestmax=10
set nofoldenable
set foldlevel=1
